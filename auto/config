	echo "--debian-installer-preseedfile \""${_DEBIAN_INSTALLER_PRESEEDFILE}"\" \\" >> ./MyLbConfig$this_datetimefile.txt
fi
if [ "$_DEBIAN_INSTALLER_GUI" != '' ]; then
