	echo "--initramfs-compression \""${_INITRAMFS_COMPRESSION}"\" \\" >> ./myautolbconfigcmd.sh
	echo "--initramfs-compression \""${_INITRAMFS_COMPRESSION}"\" \\" >> ./MyLbConfig$this_datetimefile.txt
