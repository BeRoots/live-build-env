	echo "--parent-archive-areas \""${_PARENT_ARCHIVE_AREAS}"\" \\" >> ./myautolbconfigcmd.sh
	echo "--parent-archive-areas \""${_PARENT_ARCHIVE_AREAS}"\" \\" >> ./MyLbConfig$this_datetimefile.txt
fi
